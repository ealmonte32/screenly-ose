FROM balenalib/%%BALENA_MACHINE_NAME%%-debian:buster-run
RUN apt-get update && apt-get install -y --no-install-recommends \
#RUN install_packages \
        build-essential \
        ca-certificates \
        git-core \
        libffi-dev \
        libssl-dev \
        libgirepository1.0-dev \
        lsb-release \
        net-tools \
        nginx-light \
        omxplayer \
        psmisc \
        python-dev \
        python-gi \
        python-pip-whl \
        python-pip \
        python-pil \
        python-netifaces \
        python-simplejson \
        libraspberrypi0 \
        ifupdown \
        sqlite3

RUN python -m pip install --upgrade pip setuptools wheel

# Install Python requirements
ADD requirements/requirements.txt /tmp/requirements.txt
RUN pip install --upgrade --no-cache-dir -r /tmp/requirements.txt

#initramfs compress as xz and modules as dep
COPY tests/config/initramfs.conf /etc/initramfs-tools/initramfs.conf 

# Setup nginx
RUN rm /etc/nginx/sites-enabled/default
COPY ansible/roles/ssl/files/nginx_resin.conf /etc/nginx/sites-enabled/screenly.conf

COPY . /tmp/screenly

CMD ["bash", "/tmp/screenly/bin/start_balena.sh"]
